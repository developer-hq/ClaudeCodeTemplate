{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug DPO Training",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "args": [
                "--model_name_or_path", "Qwen/Qwen3-32B",
                "--train_data_path", "./train_dataset.json",
                "--eval_data_path", "./eval_dataset.json",
                "--output_dir", "./models/debug_output",
                "--num_train_epochs", "1",
                "--per_device_train_batch_size", "1",
                "--gradient_accumulation_steps", "2",
                "--learning_rate", "2e-4",
                "--max_seq_length", "512",
                "--logging_steps", "1",
                "--save_steps", "10",
                "--eval_steps", "10",
                "--bf16", "True",
                "--gradient_checkpointing", "True",
                "--dataloader_num_workers", "0",
                "--remake_dataset"
            ],
            "env": {
                "CUDA_VISIBLE_DEVICES": "0",
                "WANDB_DISABLED": "true",
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal",
            "justMyCode": false,
            "stopOnEntry": false
        }
    ]
}